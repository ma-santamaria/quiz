<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" /><br />
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" /><br />
<label for="tema" class="rem">Temática:</label>
<select id="tema" name="quiz[tema]">
  <option value="otro" <%= quiz.tema==='otro'?'selected=selected':'' %>>Otro</option>
  <option value="humanidades" <%= quiz.tema==='humanidades'?'selected=selected':'' %>>Humanidades</option>
  <option value="ocio" <%= quiz.tema==='ocio'?'selected=selected':'' %>>Ocio</option>
  <option value="ciencia" <%= quiz.tema==='ciencia'?'selected=selected':'' %>>Ciencia</option>
  <option value="tecnologia" <%= quiz.tema==='tecnologia'?'selected=selected':'' %>>Tecnología</option>
</select><br />
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar" />
