<form method="get" action="/quizes/<%= quiz.id %>/answer">
  <p>Pregunta: <%= quiz.pregunta %></p>
  <input type="text" name="respuesta" value="Respuesta" />
  <input type="submit" name="submit" value="Enviar" />
</form>

<p>
  <a href="/quizes/<%= quiz.id %>/comments/new"><button type="button" name="button">Nuevo comentario</button></a>
</p>

<p>
  <strong>Comentarios:</strong>
</p>

<% for (index in quiz.comments) { %>
  <% if (quiz.comments[index].publicado || session.user) { %>
  <p>
    - <%= quiz.comments[index].texto %>
    <% if (session.user && !quiz.comments[index].publicado) { %>
      <a href="/quizes/<%= quiz.id %>/comments/<%= quiz.comments[index].id %>/publish"><button type="button" name="button">Publicar</button></a>
    <% } %>
  </p>
  <% } %>
<% } %>
